{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "config:best-practices",
        ":rebaseStalePrs",
        ":gitSignOff",
        ":rebaseStalePrs",
        ":disableRateLimiting",
        "docker:enableMajor",
        ":pinDependencies",
        "group:recommended",
        "group:monorepos",
        "helpers:pinGitHubActionDigestsToSemver",
        "default:automergeDigest",
        "github>USA-RedDragon/renovate-configs:labels",
        "github>USA-RedDragon/renovate-configs:golang",
        "github>USA-RedDragon/renovate-configs:automerge-all-but-major"
    ],
    "timezone": "America/Chicago",
    "assignees": [
        "USA-RedDragon"
    ],
    "nix": {
        "enabled": true
    },
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "automerge": false,
            "matchPackagePatterns": ["python"]
        },
        {
            "matchDatasources": ["docker"],
            "matchPackageNames": ["ubuntu"],
            "versioning": "ubuntu"
        },
        {
            "groupName": "os-packages",
            "matchDatasources": [
                "repology"
            ]
        }
    ],
    "registryAliases": {
        "jacob.pub/ghcr.io": "ghcr.io",
        "jacob.pub/docker.io": "docker.io",
        "jacob.pub/lscr.io": "lscr.io",
        "jacob.pub/quay.io": "quay.io",
        "jacob.pub/registry.k8s.io": "registry.k8s.io",
        "jacob.pub/nvcr.io": "nvcr.io"
    },
    "ignorePresets": [
        ":prHourlyLimit2"
    ],
    "kubernetes": {
        "enabled": true,
        "fileMatch": ["\\.ya?ml$"]
    },
    "regexManagers": [
      {
          "fileMatch": [
              ".*"
          ],
          "matchStrings": [
              "# renovate: datasource=(?<datasource>.*?)(?:\\s+extractVersion=(?<extractVersion>.+?))?(?:\\s+versioning=(?<versioning>.+?))?\\s+depName=(?<depName>.+?)?\\s(?:\\s*.*_?(?:version|VERSION)[:=]\\s*(?<currentValue>.*))?(?:\\s.*_(?:ref|REF)[:=]\\s*(?<currentDigest>.*))?"
          ],
          "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver-coerced{{/if}}"
      }
    ],
    "separateMultipleMajor": true,
    "rebaseWhen": "auto",
    "automergeType": "pr",
    "platformAutomerge": true,
    "transitiveRemediation": true,
    "rangeStrategy": "bump"
}
