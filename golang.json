{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "golang-version"
            ],
            "rangeStrategy": "bump",
            "commitMessageTopic": "{{depName}}"
        }
    ]
}